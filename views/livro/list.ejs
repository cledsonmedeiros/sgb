<!doctype html>
<html lang="pt-br">
<head>
    <% include ../estrutura/head.ejs %>
</head>
<body>
<% include ../estrutura/menu.ejs %>

<!--CONTEUDO-->

<div class="container mt-3">
    <div class="row">
        <div class="col-md-12">
            <h1 class="mt-3 mb-4 text-center">Lista de livros</h1>
            <table class="table table-striped table-bordered table-hover" style="font-size: 14px">
                <thead>
                <tr>
                    <th class="align-middle text-center">Título</th>
                    <th class="align-middle text-center">Autor</th>
                    <th class="align-middle text-center">Edição</th>
                    <th class="align-middle text-center">ISBN</th>
                    <th class="align-middle text-center">Quantidade</th>
                    <th class="align-middle text-center">Status</th>
                    <th class="align-middle text-center"></th>
                </tr>
                </thead>
                <tbody>
                <% livros.forEach((livro) => { %>
                    <tr>
                        <td class="align-middle text-center"><%- livro.titulo %></td>
                        <td class="align-middle text-center"><%- livro.autor %></td>
                        <td class="align-middle text-center"><%- livro.edicao %></td>
                        <td class="align-middle text-center"><%- livro.isbn %></td>
                        <td class="align-middle text-center"><%- livro.quantidade %></td>
                        <td class="align-middle text-center"><%- livro.status%></td>
                        <td class="align-middle text-center">
                            <a href="/livro/edit/<%-livro._id.toString()%>"><button class="btn btn-outline-primary"><i class="fas fa-pencil-alt"></i></button></a>
                            <a href="/livro/delete/<%-livro._id.toString()%>"><button class="btn btn-outline-primary"><i class="fas fa-trash"></i></button></a>
                        </td>
                    </tr>
                <% }) %>

                </tbody>
            </table>
        </div>
    </div>
</div>

<!--CONTEUDO-->
<% include ../estrutura/scripts.ejs %>
</body>
</html>

