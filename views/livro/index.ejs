<!doctype html>
<html lang="pt-br">
<head>
    <% include ../estrutura/head.ejs %>
</head>
<body>
<% include ../estrutura/menu.ejs %>

<!--CONTEUDO-->

<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h1 class="mt-3 mb-4 text-center"><%- pg_titulo %></h1>
            <form action="/livro/create" method="post" autocomplete="off">

                <input type="hidden" value="<%= livro._id %>" name="livro[_id]">

                <div class="form-group">
                    <label for="titulo">Título:</label>
                    <input type="text" class="form-control" id="titulo" name="livro[titulo]" maxlength="100" required
                           autofocus value="<%= livro.titulo %>">
                </div>

                <div class="form-row">
                    <div class="form-group col-md-9">
                        <label for="autor">Autor:</label>
                        <input type="text" class="form-control" id="autor" name="livro[autor]" maxlength="30" required
                               value="<%= livro.autor %>">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="edicao">Edição:</label>
                        <input type="number" class="form-control" id="edicao" name="livro[edicao]" required
                               value="<%= livro.edicao %>">
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-9">
                        <label for="isbn">ISBN:</label>
                        <input type="text" class="form-control" id="isbn" name="livro[isbn]" minlength="13"
                               maxlength="13" required value="<%= livro.isbn %>">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="quantidade">Quantidade:</label>
                        <input type="number" class="form-control" id="quantidade" name="livro[quantidade]" required
                               value="<%= livro.quantidade %>">
                    </div>
                </div>


                <div class="form-row justify-content-center">
                    <button type="submit" class="btn btn-outline-primary"><i class="fas fa-plus"></i> Cadastrar</button>
                    <% if (lenLivros > 0 && pg_titulo != 'Editar livro') {
                    %> <a href="/livro/list">
                        <button type="button" class='btn btn-outline-primary ml-3'><i class="fas fa-list"></i> Ver todos
                        </button>
                    </a>
                    <%
                    } %>
                </div>
            </form>
        </div>
        <div class="col-md-3">
        </div>
    </div>
</div>

<!--CONTEUDO-->
<% include ../estrutura/scripts.ejs %>
</body>
</html>